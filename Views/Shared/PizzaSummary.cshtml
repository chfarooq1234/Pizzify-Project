@model Pizzas
<style>
    .thumbnail {
        background-size: cover;
        height: 400px;
        width: auto;
    }
    #pizzaimg{
        height:auto;
        width:auto;
        
    }

</style>

<div class="col-sm-3 col-lg-3 col-md-3">
    <div class="thumbnail">
        <img id="pizzaimg" src="@Model.ImageUrl" alt="Picture of @Model.Name">
        <div class="caption">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Pizzas" asp-action="DisplayDetails" asp-route-id="@Model.Id">@Model.Name</a>
            </h3>
            <h5><b>Category: @Model.Category.Name</b></h5>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-pizzaId="@Model.Id">Add Pizza</a>
            </p>
        </div>
    </div>
</div>
